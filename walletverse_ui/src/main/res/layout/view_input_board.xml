<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:corner_radius="12dp"
    app:background_normal="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Walletverse_Text1_Bold"
        android:text="BeFi"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"/>

    <com.ruffian.library.widget.REditText
        android:id="@+id/v_name"
        style="@style/Walletverse_EditText_Common"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="20dp"
        android:inputType="text"
        app:border_color_normal="@color/color_bg3"
        app:border_width_normal="1dp"
        app:corner_radius="12dp"
        android:maxLength="50"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_bg1"/>

    <com.ruffian.library.widget.RLinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <com.ruffian.library.widget.RTextView
            android:id="@+id/v_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/Walletverse_Text2"
            android:textSize="16sp"
            android:text="@string/cancel"
            app:ripple="true"
            app:ripple_color="@color/color_bg1"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_bg1"/>

        <com.ruffian.library.widget.RTextView
            android:id="@+id/v_confirm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/Walletverse_Text1"
            android:textSize="16sp"
            android:text="@string/confirm"
            app:ripple="true"
            app:ripple_color="@color/color_bg1"/>

    </com.ruffian.library.widget.RLinearLayout>




</com.ruffian.library.widget.RLinearLayout>