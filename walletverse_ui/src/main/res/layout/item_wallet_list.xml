<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:layout_marginTop="15dp"
    android:gravity="center_vertical"
    app:border_color_normal="@color/color_bg3"
    app:border_width_normal="1dp"
    app:corner_radius="12dp"
    android:layout_marginHorizontal="15dp"
    app:ripple="true"
    app:ripple_color="@color/color_bg1">

    <ImageView
        android:id="@+id/v_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_circle_uncheck_small"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/v_wallet_name"
        style="@style/Walletverse_Text1_Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        />

    <ImageView
        android:id="@+id/v_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_operation"
        android:padding="15dp"/>

</com.ruffian.library.widget.RLinearLayout>