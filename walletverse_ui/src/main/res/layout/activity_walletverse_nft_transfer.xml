<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_titlebar" />

    <com.ruffian.library.widget.RLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:padding="15dp"
        app:border_color_normal="@color/color_bg3"
        app:border_width_normal="1dp"
        app:corner_radius="12dp">

        <TextView
            style="@style/Walletverse_Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to" />

        <EditText
            android:id="@+id/v_address"
            style="@style/Walletverse_EditText_Common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:digits="@string/digits_input2"
            android:hint="@string/hint_input_address"
            android:paddingHorizontal="0dp" />

    </com.ruffian.library.widget.RLinearLayout>


    <com.ruffian.library.widget.RLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:padding="15dp"
        app:border_color_normal="@color/color_bg3"
        app:border_width_normal="1dp"
        app:corner_radius="12dp">


        <TextView
            style="@style/Walletverse_Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transfer_collection" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/v_nft_icon"
                android:layout_width="58dp"
                android:layout_height="58dp"
                app:riv_corner_radius="10dp" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/v_nft_name"
                    style="@style/Walletverse_Text1_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:text="Mutant Ape Yacht Club"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

<!--                    <com.makeramen.roundedimageview.RoundedImageView-->
<!--                        android:id="@+id/v_chain_image"-->
<!--                        android:layout_width="14dp"-->
<!--                        android:layout_height="14dp"-->
<!--                        app:riv_corner_radius="8dp"-->
<!--                        android:src="@mipmap/icon_local_polygon_unchecked_light"/>-->

                    <TextView
                        android:id="@+id/v_chain_name"
                        style="@style/Walletverse_Text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Pologon"/>


                </LinearLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>

    </com.ruffian.library.widget.RLinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <com.walletverse.ui.view.WalletverseButton
        android:id="@+id/v_transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:befi_text="@string/transfer"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="15dp"
        />

</LinearLayout>

















