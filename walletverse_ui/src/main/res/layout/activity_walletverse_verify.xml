<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <include layout="@layout/view_titlebar" />

    <TextView
        android:id="@+id/v_first_num"
        style="@style/Walletverse_Text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:text="请输入第 4 个单词" />

    <com.ruffian.library.widget.REditText
        android:id="@+id/v_first_input"
        style="@style/Walletverse_EditText_Common"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:digits="@string/digits_input"
        android:inputType="text"
        app:border_color_normal="@color/color_bg3"
        app:border_width_normal="1dp"
        app:corner_radius="12dp"
        android:maxLength="35"
        />

    <TextView
        android:id="@+id/v_second_num"
        style="@style/Walletverse_Text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:text="请输入第 4 个单词" />

    <com.ruffian.library.widget.REditText
        android:id="@+id/v_second_input"
        style="@style/Walletverse_EditText_Common"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:digits="@string/digits_input"
        android:inputType="text"
        app:border_color_normal="@color/color_bg3"
        app:border_color_selected="@color/color_red"
        app:border_width_normal="1dp"
        app:corner_radius="12dp"
        android:maxLength="35"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.walletverse.ui.view.WalletverseButton
        android:id="@+id/v_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:befi_text="@string/confirm"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="30dp"
        />

</LinearLayout>