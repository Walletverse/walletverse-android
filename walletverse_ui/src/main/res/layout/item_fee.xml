<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:corner_radius="12dp"
    app:border_color_normal="@color/color_bg1"
    app:border_width_normal="1dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="12dp"
    android:gravity="center_vertical"
    app:ripple="true"
    app:ripple_color="@color/color_bg1"
    android:paddingHorizontal="15dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/v_speed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Walletverse_Text1_Bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/v_gwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Walletverse_Text3"
            android:textSize="14sp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/v_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Walletverse_Text2"
        android:textSize="14sp"
        />

    <ImageView
        android:id="@+id/v_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_unchecked_new"
        android:layout_marginStart="15dp"/>

</com.ruffian.library.widget.RLinearLayout>